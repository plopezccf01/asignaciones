{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/styles.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css" />
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="main container">
        <div class="row well">
            <div class="col-md-12" id="alert">
                <div class="page-header">
					<h2>How can we help you?</h2>
				</div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-user bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="firstName">First Name</label>
                        <input type="text" name="firstName" placeholder="First Name" class="form-control requiredField">
                        <small></small>
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-user bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="lastName">Last Name</label>
                        <input type="text" name="lastName" placeholder="Last Name" class="form-control requiredField">
                        <small></small>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-envelope bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Email" class="form-control requiredField">
                        <small></small>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-earphone bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="prefixPhone">Prefix Phone</label>
                        <select id="selector-banderas" class="form-control">
                            <option value="-1" data-icon=""></option>
                            <option value="+30" data-icon= "flag-icon flag-icon-gr">Grecia</option>
                            <option value="+31" data-icon="flag-icon flag-icon-nl">Países Bajos</option>
                            <option value="+32" data-icon="flag-icon flag-icon-be">Bélgica</option>
                            <option value="+33" data-icon="flag-icon flag-icon-fr">Francia</option>
                            <option value="+34" data-icon="flag-icon flag-icon-es">España</option>
                            <option value="+36" data-icon="flag-icon flag-icon-hu">Hungría</option>
                            <option value="+39" data-icon="flag-icon flag-icon-it">Italia</option>
                            <option value="+40" data-icon="flag-icon flag-icon-ro">Rumanía</option>
                            <option value="+41" data-icon="flag-icon flag-icon-ch">Suiza</option>
                            <option value="+43" data-icon="flag-icon flag-icon-at">Austria</option>
                            <option value="+44" data-icon="flag-icon flag-icon-gb">Reino Unido</option>
                            <option value="+45" data-icon="flag-icon flag-icon-dk">Dinamarca</option>
                            <option value="+46" data-icon="flag-icon flag-icon-se">Suecia</option>
                            <option value="+47" data-icon="flag-icon flag-icon-no">Noruega</option>
                            <option value="+48" data-icon="flag-icon flag-icon-pl">Polonia</option>
                            <option value="+49" data-icon="flag-icon flag-icon-de">Alemania</option>
                        </select>
                        <small></small>
                    </div>
                </div>
                
                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-earphone bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="phone">Phone</label>
                        <input name="phone" type="text" placeholder="Phone" class="form-control" id="phone">
                        <small></small>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-pencil bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="affair">Affair</label>
                        <input name="affair" type="text" placeholder="Affair" class="form-control requiredField">
                        <small></small>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-edit bigicon" aria-hidden="true"></span>
                    <div class="col-md-8">
                        <label for="description">Description</label>
                        <textarea class="form-control requiredField" name="description" placeholder="Description" rows="7"></textarea>
                        <small></small>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary btn-lg btn-success">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}