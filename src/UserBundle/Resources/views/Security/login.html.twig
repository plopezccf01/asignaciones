{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/signin.css') }}">
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <form action="{{ path('user_login_check') }}" method="post" class="form-signin">
            <h2 class="form-signin-heading">Please sign in</h2>

            {% if error %}
                <div class="text-danger">
                    <p>
                        <strong>
                            {{ error.messageKey }}
                        </strong>
                    </p>
                </div>
            {% endif %}

            <label for="username" class="sr-only">Username:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Username" required autofocus>

            <label for="password" class="sr-only">Password:</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>

            <input type="hidden" name="_target_path" value="user_homepage">

            <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
        </form>
    </div>
{% endblock %}